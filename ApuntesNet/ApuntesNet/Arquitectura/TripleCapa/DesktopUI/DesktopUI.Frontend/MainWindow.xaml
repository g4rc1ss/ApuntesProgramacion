<Window x:Class="DesktopUI.Frontend.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopUI.Frontend"
        mc:Ignorable="d"
        Title="MainWindow" Height="433" Width="584">
    <Canvas>
        <Button Content="Cargar Table BBDD con EF Core" Canvas.Left="24" RenderTransformOrigin="-3.833,-7.802" Height="40" Width="256" Click="CargarBBDD" Canvas.Top="17"/>
        <DataGrid x:Name="DataGrid_Table" Canvas.Top="70" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nombre" Binding="{Binding Name}"/>
                <DataGridTextColumn Header="Edad" Binding="{Binding Edad}"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Cargar Table BBDD con Dapper" Canvas.Left="295" RenderTransformOrigin="-3.833,-7.802" Height="40" Width="256" Click="CargarBBDD_WithDapper" Canvas.Top="17"/>
    </Canvas>
</Window>
