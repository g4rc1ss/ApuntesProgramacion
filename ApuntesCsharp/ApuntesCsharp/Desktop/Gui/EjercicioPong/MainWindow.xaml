<Window x:Class="EjecicioPong.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Pong" Height="525" Width="530" ResizeMode="NoResize" KeyDown="Window_KeyDown" KeyUp="Window_KeyUp" Icon="img/icono.jpg">
    <StackPanel Background="Gray">
        <StackPanel Height="50" Orientation="Horizontal" HorizontalAlignment="Center">
            <Label x:Name="lblP1" FontFamily="/Pong2017-2018;component/fonts/#Bit5x3"  FontSize="44">0</Label>
            <Label Width="100"></Label>
            <Label x:Name="lblP2" FontFamily="/Pong2017-2018;component/fonts/#Bit5x3" FontSize="44">0</Label>
        </StackPanel>
        <Canvas x:Name="AreaJuego" Background="black" Width="500" Height="420" Margin="0,10,0,0">
            <Rectangle x:Name="P2" Stroke="white" Fill="White" Canvas.Top="100" Canvas.Left="20" Height="60" Width="10"></Rectangle>
            <Rectangle x:Name="P1" Stroke="white" Fill="White" Canvas.Top="100" Canvas.Left="470" Height="60" Width="10"></Rectangle>
            <Ellipse x:Name="bolita" Stroke="white" Fill="White" Height="10" Width="10"></Ellipse>
        </Canvas>
    </StackPanel>
</Window>
