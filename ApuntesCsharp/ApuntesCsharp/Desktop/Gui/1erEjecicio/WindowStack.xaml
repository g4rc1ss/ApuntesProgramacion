<Window x:Class="_1erEjecicio.WindowStack"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="WindowStack" Height="300" Width="300">

    <StackPanel x:Name="panelStack" Orientation="Horizontal" HorizontalAlignment="Center"  VerticalAlignment="Center" >
        <Button x:Name="btnVertical" Content="Vertical" Width="75" Click="BtnVertical_Click"/>
        <Button x:Name="btnSeparar" Content="Separar" Width="75" Click="BtnSeparar_Click"/>
        <Button x:Name="btnHorizontal" Content="Horizontal" Width="75" Click="BtnHorizontal_Click"/>
    </StackPanel>
</Window>
