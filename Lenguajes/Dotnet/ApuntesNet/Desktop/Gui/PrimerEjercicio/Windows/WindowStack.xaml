<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PrimerEjercicio.Windows.WindowStack"
             Title="WindowStack">

    <StackLayout x:Name="panelStack" Orientation="Horizontal" HorizontalOptions="Center" VerticalOptions="Center" >
        <Button x:Name="btnVertical"
                Text="Vertical"
                Width="75"
                Clicked="BtnVertical_Click"/>

        <Button x:Name="btnSeparar"
                Text="Separar"
                Width="75"
                Clicked="BtnSeparar_Click"/>

        <Button x:Name="btnHorizontal"
                Text="Horizontal"
                Width="75"
                Clicked="BtnHorizontal_Click"/>
    </StackLayout>
</ContentPage>
