<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="ExamplePlugin.RequestWindow"
        Title="ExamplePlugin">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="27*" />
            <RowDefinition Height="61*" />
            <RowDefinition Height="202*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="175*" />
            <ColumnDefinition Width="134*" />
            <ColumnDefinition Width="191*" />
        </Grid.ColumnDefinitions>
        <Label Content="Cual es mi Ip" VerticalAlignment="Center" Height="45" Grid.Column="1" Grid.Row="1"
               HorizontalAlignment="Center" Width="80" />
        <Button Content="Solicitar" HorizontalAlignment="Center" VerticalAlignment="Top" Height="40" Width="128"
                Click="Button_Clicked" Grid.Row="2" Grid.Column="1" Margin="0,21,0,0" />
    </Grid>
</Window>