@page "/"

<PageTitle>Index</PageTitle>

@if (_users is not null)
{
    <div class="col-md-12">
        <div class="col-xs-12">
            <div class="table-responsive">
                <div style="overflow:auto; height: 50vh;">
                    <table id="tablaResultadosLogs" class="table table-striped table-hover table-bordered table-sm">
                        <caption class="text-center">@(_users.Count()) registro@(_users.Count() != 1 ? "s" : "") </caption>
                        <thead>
                            <tr>
                                <th class="th-sm" style="text-align: center">
                                    Nombre de Usuario
                                </th>
                                <th class="th-sm" style="text-align: center">
                                    Nombre
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                foreach (var usuario in _users)
                                {
                                    <tr>
                                        <td class="th-sm" style="text-align: center">@usuario.Id</td>
                                        <td class="th-sm" style="text-align: center">@usuario.UserName</td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

}